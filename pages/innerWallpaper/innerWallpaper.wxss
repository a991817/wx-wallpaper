page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

.t-tabs.t-tabs--top .t-tabs__scroll {
  border-bottom: none !important;
}

.wallpaper-page-header {
  background: linear-gradient(#f86565, rgb(97, 158, 238));
  padding-top: 100px;
  padding-left: 24px;
  padding-right: 24px;
}

.wallpaper-page-container {
  background: #f5f5f5;
  display: block;
  padding: 0rpx 24rpx;
}

/* .wallpaper-page-container,
.wallpaper-page-header {
  display: block;
  padding: 0rpx 24rpx;
} */

.wallpaper-page-header .t-search__input-container {
  border-radius: 32rpx !important;
  height: 64rpx !important;
}

.wallpaper-page-header .t-search__input {
  font-size: 28rpx !important;
  color: rgb(116, 116, 116) !important;
}

.wallpaper-page-header .swiper-wrap {
  margin-bottom: 20rpx;
}

.wallpaper-page-header .t-image__swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}

.wallpaper-page-container .t-tabs {
  background: #f5f5f5 !important;
}

.wallpaper-page-container .t-tabs .t-tabs-nav {
  background-color: transparent;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.wallpaper-page-container .t-tabs .t-tabs-scroll {
  border: none !important;
}

/* 半个字 */
.wallpaper-page-container .tab.order-nav .order-nav-item.scroll-width {
  min-width: 165rpx;
}

.wallpaper-page-container .tab .order-nav-item.active {
  color: #fa550f !important;
}

.wallpaper-page-container .tab .bottom-line {
  border-radius: 4rpx;
}

.wallpaper-page-container .tab .order-nav-item.active .bottom-line {
  background-color: #fa550f !important;
}

.wallpaper-page-container .tabs-external__item {
  /* color: rgb(197, 32, 32) !important; */
  font-size: 28rpx;
}

.wallpaper-page-container .tabs-external__active {
  color: #333333 !important;
  font-size: 32rpx;
}

.wallpaper-page-container .tabs-external__track {
  /* background-color: #fa4126 !important; */
  height: 6rpx !important;
  border-radius: 4rpx !important;
  width: 48rpx !important;
}

.t-tabs.t-tabs--top .t-tabs__item,
.t-tabs.t-tabs--bottom .t-tabs__item {
  height: 86rpx !important;
}

.wallpaper-page-container .goods-list-container {
  background: #f5f5f5 !important;
  margin-top: 16rpx;
}

.wallpaper-page-tabs {
  --td-tab-nav-bg-color: transparent;
  --td-tab-border-color: transparent;
  --td-tab-item-color: #666;
  --td-tab-track-color: rgb(245, 99, 99);
}

.dark {
  margin-top: 16rpx;
  /* background-color: red; */
  display: flex;
}

.light {
  margin-top: 16rpx;
  background-color: #366ef4;
  display: flex;
}

.img {
  display: inline-block;
}

.dark,
.light {
  background-clip: content-box;
  color: #fff;
  font-size: 28rpx;
  line-height: 96rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

.tr {
  display: flex;
}

.col {
  margin: 0 32rpx;
}

.tr+.tr {
  margin-top: 48rpx;
}

.text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, .6);
  line-height: 44rpx;
  margin-bottom: 32rpx;
}

/* /gpt */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.wallpaper-list {
  width: 100%;
  height: 100%;
}

.row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.image-container {
  width: calc(33.33% - 10rpx);
  height: 0;
  padding-bottom: calc(33.33% - 10rpx);
  position: relative;
  overflow: hidden;
}

.wallpaper-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.wallpaperImg {
  box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.3);
  /* 添加阴影效果 */
}